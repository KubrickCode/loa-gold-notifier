{
  "manifest_version": 3,
  "name": "로아 골드 거래 알리미",
  "version": "1.0",
  "description": "디스코드 채널의 로스트아크 골드 거래 알림",
  "icons": {
    "16": "src/public/icon.png",
    "48": "src/public/icon.png",
    "128": "src/public/icon.png"
  },
  "permissions": ["storage", "notifications"],
  "host_permissions": ["https://discord.com/*"],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": "src/public/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["src/scripts/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/scripts/background.js"
  }
}
